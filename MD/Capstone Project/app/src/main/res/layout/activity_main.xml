<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="891dp"
        android:layout_height="498dp"
        android:adjustViewBounds="false"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/_8_cute_desk_space_decor_to_have_for_yourself___atinydreamer"
        tools:layout_editor_absoluteX="-265dp"
        tools:layout_editor_absoluteY="-224dp" />

    <TextView
        android:id="@+id/asma"
        android:layout_width="128dp"
        android:layout_height="62dp"
        android:text="ASMA"
        android:textColor="#F1E6E6"
        android:textSize="34sp"
        android:textStyle="bold"
        android:typeface="normal"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="162dp">
    </TextView>

    <TextView
        android:id="@+id/des"
        android:layout_width="377dp"
        android:layout_height="0dp"
        android:text="@string/asisten_mahasiswa"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="205dp">

    </TextView>

    <TextView
        android:id="@+id/desc"
        android:layout_width="242dp"
        android:layout_height="36dp"
        android:text=": Buatmu Bernafas Lega"
        android:textColor="#020202"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="205dp">

    </TextView>

    <TextView
        android:id="@+id/descr"
        android:layout_width="377dp"
        android:layout_height="36dp"
        android:text="Menghadapi"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="229dp">

    </TextView>

    <TextView
        android:id="@+id/ta"
        android:layout_width="377dp"
        android:layout_height="36dp"
        android:text="TA"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="229dp">

    </TextView>

    <TextView
        android:id="@+id/trend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Tending Topik"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg"
        app:layout_constraintVertical_bias="0.466">
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="414dp"
        android:layout_height="456dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="321dp" />


</androidx.constraintlayout.widget.ConstraintLayout>